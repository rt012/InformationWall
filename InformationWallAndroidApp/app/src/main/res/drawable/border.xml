<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- DropShadow -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="90%"
            android:pivotY="-59.5%"
            android:toDegrees="45" >
            <shape android:shape="rectangle" >
                <solid android:color="#101a1a1a" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="90%"
            android:pivotY="-59%"
            android:toDegrees="45" >
            <shape android:shape="rectangle" >
                <solid android:color="#301a1a1a" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="90%"
            android:pivotY="-58.5%"
            android:toDegrees="45" >
            <shape android:shape="rectangle" >
                <solid android:color="#501a1a1a" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="90%"
            android:pivotY="-58%"
            android:toDegrees="45" >
            <shape android:shape="rectangle" >
                <solid android:color="#701a1a1a" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="90%"
            android:pivotY="-57.5%"
            android:toDegrees="45" >
            <shape android:shape="rectangle" >
                <solid android:color="#901a1a1a" />
            </shape>
        </rotate>
    </item>
    <!--- Corner Rectangle -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="90%"
            android:pivotY="-60%"
            android:toDegrees="45">
            <shape android:shape="rectangle" >
                <stroke
                    android:width="10dp"
                    android:color="#FF9100" />

                <solid android:color="#FF9100" />
            </shape>
        </rotate>
    </item>
    <!-- Border -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke
                android:width="5dip"
                android:color="#FF9100" />
        </shape>
    </item>
</layer-list>